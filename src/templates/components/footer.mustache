            background-color: #f7a001;
        }

        .scroll-cta {
            transform: translate3d(0, 0, 0);
            opacity: 1;
            pointer-events: auto;
            transition: all ease 0.5s;
            right: 15px;
            top: -100px;
            display:inline-block;
            padding: 15px 20px;
            box-shadow: 0 10px 40px 0 rgba(34, 38, 66, 0.3);
            background: #fff;
            margin-right: 0;
            margin-left: auto;
            border-radius: 6px;
            position: fixed;
            opacity:0;
            z-index:20;
        }
        
        body.scrolled .scroll-cta {
            top: 20px;
            opacity:1;
        }
        
        .scroll-cta::before {
            content: '';
            display: block;
            height: 24px;
            width: 24px;
            background: #fff;
            border-radius: 6px;
            position: absolute;
            top: -8px;
            right: 60px;
            transform: rotate(45deg);
        }
        
        .scroll-cta .cta {
            animation:none;
            line-height:50px;
            height:50px;
            position:relative;
            z-index:25;
