<link href="/css/dashboard.css" rel="stylesheet">
<div class="container-fluid" style="margin-left: 205px;padding: 0px 0px 0px 40px;">
    <div class="row">
        <div class="row">
            <div class="col-lg-8 col-xl-8 col-md-8 col-sm-8">
                <h2><b>Billing & Users</b></h2>
            </div>
            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-4">
                <select id="change-user" style="display: none;">
                    {{#subscription}}
                    <option value="{{email}}" image="{{image_url}}">{{email}}</option>
                    {{/subscription}}
                </select>
                <div id="switch-user"></div>
            </div>
        </div>
        <hr id="big-hr">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
            <div class="tabbable-panel">
                <div class="tabbable-line">
                    <ul class="nav nav-tabs" style="width:50%;">
                        <li id="plan-and-billing-tab" class="active">
                            <a href="#plan-and-billing" data-toggle="tab" class="tab-label" style="outline:none">
                            <h4>Plan &amp; Billing</h4></a>
                        </li>
                        <li id="add-new-users-tab">
                            <a href="#add-new-users" data-toggle="tab" class="tab-label" style="outline:none">
                            <h4>Add New Users</h4></a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="plan-and-billing" class="tab-pane active">
                            <div class="row">&nbsp;&nbsp;</div>
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6">
                                {{#subscription}}
                                <div class="container-fluid" style="background-color: #f6f5f6;color:#494949;">
                                    <div class="row"><h4>&nbsp;&nbsp;Email: {{email}}</h4></div>
                                    <div class="row"><h4>&nbsp;&nbsp;Plan: {{plan}}
                                        <span id="upgrade">(<a href="/dashboard/upgrade?user_id={{user_id}}" style="color:#32afbd;">Modify</a>)</span></h4></div>
                                        <div class="row"><h4>&nbsp;&nbsp;Billing Frequency: {{plan_id}}</h4></div>
                                        <!-- <div class="row"><h4>&nbsp;&nbsp;Valid Until: {{expiry_date}}.</h4></div> -->
                                    </div>
                                    <div class="row">&nbsp;</div>
                                    {{/subscription}}
                                </div>
                                <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6"></div>
                            </div>
                            <div id="add-new-users" class="tab-pane" style="margin-left: 20px;">
                                <div class="container-fluid">
                                    <div class="row">&nbsp;&nbsp;</div>
                                    <div class="row">
                                        <h4>To add MailTag to another email, simply sign in with Google.</h4>
                                        <h4>To upgrade your newly added email, go to the "Plan &amp; Billing" tab.</h4>
                                        <div class="row">&nbsp;</div>
                                        <!-- <img src="/img/signin-with-google-white.png" id="signin-with-google" class="img-responsive" width="230px" style="cursor: pointer;"> -->
                                        <a class="google" id="signin-with-google"><h4>Sign in with Google</h4></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/moment.js" type="text/javascript"></script>
<script src="/js/account.js"></script>
