                                    </div>
                                    {{/flag}}
                                    {{^flag}}
                                    <div class="success-text" style="margin-bottom: 48px;">
                                        <h2 style="font-weight: bold; text-align: center; color:#ff0000a8; font-size: 26px;margin-top: 58px; letter-spacing: .5px;">
                                            {{text}}
                                        </h2>
                                    </div>
                                    {{/flag}}
                                    <a class="btn invite-success-btn" href="/dashboard/team-management">
                                        Go to Dashboard
