<style type="text/css">
    #card-number-element, #card-expiry-element, #card-cvc-element {
            outline: none;
            font-family: 'AdobeAvenirLTStdRoman', -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            font-size: 16px;
            color: #222642;
            text-align: left;
            padding-top: 12px;
            /*padding-left: 20px;*/
            background: #ffffff;
            border-bottom: 2px solid #eef3f8;
            /*border-radius: 100px;*/
            height: 44px;
            width: 100%;
        }
        .promo-outcome{
            padding-top: 5px;
            height: 20px;
        }
        .promo-outcome .promocode-earlybird-error{
            margin-top: 0px !important;

        }
        .outcome .card-no-error, .outcome .card-exp-error, .outcome .card-cvc-error, .outcome .promocode-earlybird-error {
            color: red;
            text-align: left;
            margin-top: 4px;
            overflow: visible;
            white-space: nowrap;
        }
        .outcome .visible {
            display: block !important;
        }
        .promocode-input{
            text-transform: uppercase;
        }
        .cover-layout {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            background-color: rgba(34, 38, 66, 0.5);
            z-index: 999999999;
            width: 100%;
            height: 100%;
        }
        @keyframes spinner {
            to {
                transform: rotate(360deg);
            }
        }

        .spinner:before {
            content: '';
            box-sizing: border-box;
            position: absolute;
            top: 50%;
            left: 50%;
            width: 42px;
            height: 42px;
            margin-top: -15px;
            margin-left: -15px;
            border-radius: 50%;
            border: 3px solid rgba(204, 204, 204, 0.2);
            border-top-color: #fff;
            animation: spinner .6s linear infinite;
        }
        .update-banner{
            height: 505px;
        }
</style>
{{/styles}}
