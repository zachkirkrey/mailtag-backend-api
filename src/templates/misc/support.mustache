<script>
$('.support-faq-question').click(function() {
	var q = $(this).attr('data-q');
	var all = $('.support-faq-answer');
	for(var i = 0; i < all.length; i++) {
		var item = $(all[i]);
		if(item.attr('data-q') != q) item.removeClass('shown');
	}
	var a = $('.support-faq-answer[data-q=' + q + ']');
	a.toggleClass('shown');
});
</script>