<link href="/css/invoice.css" rel="stylesheet">
<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
	<div class="container-fluid" style="margin-left: 205px;margin-top: 1vh;background-color: white; height: 98vh;">
		{{#invoiceDisplayFlag}}
		<h2><b>Invoice</b></h2>
		
		<table class="table table-bordered">
			<thead class="thead-default">
				<tr>
					<th>No</th>
					<th>Amount</th>
					<th>Status</th>
					<th>Plan</th>
					<th>Description</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
				{{#invoiceData}}
				<tr>
					<th scope="row">{{no}}</th>
					<td>{{amount}}</td>
					<td>{{status}}</td>
					<td>{{plan}}</td>
					<td>{{description}}</td>
					<td>{{created}}</td>
				</tr>
				{{/invoiceData}}
			</tbody>
		</table>
		{{/invoiceDisplayFlag}}
	</div>
	{{^invoiceDisplayFlag}}
	<h3 style="margin:15px;">Currently you have no invoice.</h3>
	{{/invoiceDisplayFlag}}
</div>
<script src="/js/invoice.js"></script>