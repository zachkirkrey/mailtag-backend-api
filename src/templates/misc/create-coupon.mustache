<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

{{< static-pages-layout }}

{{$ content }}
<div class="header-bg">
    <div class="header-bg-img"></div>
</div>
<div class="container payment-popup-container" style="width: 680px;height: 600px;">
    <div class="container" style="background-color: white; " > 
        <div class="lightbox-demo" >  
            <form name="coupon-creation" id="coupon-creation" action="" class="upgrate-form" onsubmit="return validateForm()">
                <div class="upgrate-box">
                    <div class="price-box input-content">
                        <div class="subheading">
                            Create Coupon
                        </div>               
                    </div>    
                </div>
                <div class="row">
                    <div class="col">
                        <label >
                            Stripe Code
                        </label>
                        <input class="form-control" placeholder="Enter Stripe Code" type="text" name="stripe">   
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col">
                        <label >
                            Percentage off
                        </label>
                        <input class="form-control" placeholder="Percentage off" type="text" name="off">      
                    </div>
                    <div class="col">
                        <label >
                            Repetitive
                        </label>
                        <input class="form-control" placeholder="Repetitive" type="text" name="repetitive">
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col">
                        <label >
                            Quantity
                        </label>
                        <input class="form-control" placeholder="Quantity" type="text" name="quantity">  
                    </div>
                    <div class="col">
                        <label >
                            Type
                        </label>
                        <input class="form-control" placeholder="Type Staging or Live" type="text" name="type">
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col">
                        <label >
                            Password
                        </label>
                        <input class="form-control" name="password" placeholder="Password" type="text" name="password" required>
                    </div>
                    <div class="col">
                        <label >
                            Coupon Name
                        </label>
                        <input class="form-control" placeholder=" Coupon Name" type="text" name="name">
                    </div>
                </div><br>
                <div class="form-group">
                    <input class="btn btn-primary"  type="submit" value="Create Coupon">
                    </input>
                </div>
            </form>
        </div>
    </div> 
</div>
    
{{/ content }}

{{$ scripts }}
    <script src="/js/creatinCoupon.js" type="text/javascript"></script>    
{{/ scripts }}

{{/ static-pages-layout }}